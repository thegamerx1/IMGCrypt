{% extends "layout.j2" %}
{% block title %}
   Register
{% endblock title %}
{% block main %}
   <h3 class="text-center mb-3">Register</h3>
   <form action="{{ url_for('register') }}" method="post" class="text-center">
      <div class="mb-3">
         <input autocomplete="off"
                autofocus
                class="form-control mx-auto w-auto"
                id="username"
                name="username"
                placeholder="Username"
                type="text"
                value="{{ request.form['username'] }}"/>
      </div>
      <div class="mb-3">
         <input class="form-control mx-auto w-auto"
                id="password"
                name="password"
                placeholder="Password"
                type="password"
                value="{{ request.form['password'] }}"/>
      </div>
      <div class="mb-3">
         <input class="form-control mx-auto w-auto"
                id="confirmation"
                name="confirmation"
                placeholder="Repeat password"
                type="password"
                value="{{ request.form['confirmation'] }}"/>
      </div>
      <button class="btn btn-primary" type="submit">Register</button>
      <a href="{{ url_for('login') }}" class="d-block mt-3">Already have an account?</a>
   </form>
{% endblock main %}
