{% extends "layout.j2" %}
{% block title %}
   Encrypt
{% endblock title %}
{% block main %}
   <div class="container-sm">
      <div class="container-fluid d-flex flex-column">
         <!-- add password file upload and password input -->
         <form onSubmit="return false" class="container-sm">
            <h3>Encrypt</h3>
            <div class="form-group row">
               <label for="selecttype" class="col-sm-2 col-form-label">Type</label>
               <div class="col-sm-10">
                  <select class="form-control" id="selecttype">
                     <option value="string">
                        String
                     </option>
                     <option value="file">
                        File Upload
                     </option>
                  </select>
               </div>
            </div>
            <div class="form-group row mt-2" id="dataBox">
               <label for="dataInput" class="col-sm-2 col-form-label">Input data</label>
               <div class="col-sm-10">
                  <input type="text" class="form-control" id="dataInput" placeholder="Message" />
               </div>
            </div>
            <div class="form-group mt-2 d-none" id="fileBox">
               <label for="file" class="col-form-label">File</label>
               <input type="file" class="form-control-file" id="fileInput" />
            </div>
            <div class="form-group row mt-2">
               <label for="password" class="col-sm-2 col-form-label">Password</label>
               <div class="col-sm-10">
                  <input type="text"
                         class="form-control"
                         id="password"
                         placeholder="Password to encrypt with"/>
               </div>
            </div>
         </form>
         <h3 class="mt-5">Image</h3>
         <div action="{{ url_for('encryptapi') }}"
              class="dropzone mb-3"
              id="dropzoned"></div>
         <p class="text-muted">
            Succesful tasks can be downloaded on <a href="{{ url_for('tasks') }}">tasks</a>.
         </p>
      </div>
      <script src="{{ url_for('static', filename='encrypt.js') }}"></script>
   </div>
{% endblock main %}
